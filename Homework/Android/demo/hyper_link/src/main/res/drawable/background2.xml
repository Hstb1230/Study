<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <!-- 指定圆角矩形的4个圆角的半径 -->
    <corners
        android:topLeftRadius="20sp"
        android:topRightRadius="15sp"
        android:bottomRightRadius="20sp"
        android:bottomLeftRadius="15sp"
        />
    <!--  指定边框线条的宽度和颜色  -->
    <stroke android:width="4sp" android:color="#ABC" />
    <!--  指定使用渐变背景颜色, 使用sweep类型的渐变颜色  -->
    <gradient android:startColor="#BCD"
        android:centerColor="#CDE"
        android:endColor="#DEF"
        android:type="sweep"
        android:angle="0"
        />
    <!--  设置文本边距  -->
    <padding android:left="18px" android:right="18px" />
</shape>